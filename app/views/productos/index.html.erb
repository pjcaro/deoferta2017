
<div class="container">
  <div class="buscador-principal">
    <div class="margin">
      <!-- <div class="center">
        <%= image_tag('logodeoferta.png', class: 'img-fluid') %>
      </div> -->
      <%= render 'productos/buscador' %>
    </div>
  </div>
  <div class="row">
    <div class="col m3">
      <ul class="collapsible" data-collapsible="accordion">
        <li>
          <div class="collapsible-header"><i class="material-icons">filter_drama</i>Filtrar</div>
          <div class="collapsible-body">
            Por Tienda <br>
            <%= form_tag filter_productos_path, method: :get, id: 'filtro' do %>
              <%= collection_check_boxes(:marketplace ,:marketplaces, Marketplace.all.to_a, :nombre, :nombre) do |b| %>
                    <div class="collection-check-box no-mostrar">
                      <%= b.check_box(class: 'check_categories') %>
                      <%= b.label %>
                    </div>
                <% end %>
                <%= hidden_field_tag :query, params[:query] %>
                <br>
                Por precios
                <div class="radio-buttons">
                  <%= radio_button_tag(:rango, 6000) %>
                  <%= label_tag(:rango_6000, "Hasta 6000") %>
                  <%= radio_button_tag(:rango, 10000) %>
                  <%= label_tag(:rango_10000, "Hasta 10000") %>
                </div>
                <div class="row center">
                  <br>
                  <%= button_tag "Filtrar", class: 'btn btn-primary' %>
                </div>
            <% end %>


          </div>

        </li>
      </ul>

    </div>
    <div class="col m9">

      <ul class="collection">
        <% @productos.each do |producto| %>
          <li class="collection-item avatar">
            <%= link_to historial_producto_path(producto), class:'sin-estilo' do %>
              <img src="images/yuna.jpg" alt="" class="circle">
              <% if producto.image.nil? || producto.marketplace == "Linio.com.ar"%>
                <%= image_tag "default.png", class: 'circle' %>
              <% else %>
                <%= image_tag producto.image, class: 'circle' %>
              <% end %>
              <span class="title"><%= producto.title %></span>
              <p class="precio"><%= number_to_currency(producto.precio, precision: 0, :unit => "$") %> <br>
              </p>
                <%= link_to producto.permalink, target: "_blank" do %>
                  <%= producto.marketplace %>
                  <i class='tiny material-icons'>open_in_new</i>
                <% end %>
              <!-- <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a> -->
              <div class="value <%= producto.id %>-fav" data-toggle="tooltip" data-placement="top" title="Agregar a favoritos">
                <%= favorito_link(producto) %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>

    </div>

  </div>

</div>
<div class="center">
  <%= paginate @productos %>
</div>
